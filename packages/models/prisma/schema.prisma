// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  firstname String
  lastname  String
  nickname  String
  email     String @unique
  password  String
  refresh   String

  pressKeywords String[] @default([])

  currency                 Currency?                @relation(references: [id], onDelete: NoAction, fields: [currencyId])
  currencyId               Int?
  followedCryptoCurrencies UserFollowedCurrencies[]

  role Role @default(CLIENT)
}

model Currency {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name      String
  symbol    String  @unique
  api_id    Int?    @unique
  is_crypto Boolean
  image_url String?

  followers UserFollowedCurrencies[]
  User      User[]
}

model UserFollowedCurrencies {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  currency   Currency @relation(fields: [currencyId], references: [id], onDelete: Cascade)
  userId     Int
  currencyId Int
}

enum App {
  FRONT
  BO
}

enum Role {
  ADMIN
  CLIENT
}
